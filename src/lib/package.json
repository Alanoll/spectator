{
  "name": "@netbasal/spectator",
  "description": "Angular tests made easy",
  "version": "3.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NetanelBasal/spectator"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "copy:changelog": "copy CHANGELOG.md ../../",
    "pub": "npm publish --access public",
    "tag": "git push --follow-tags origin master",
    "release": "npm run build && standard-version && npm run copy:changelog && npm run tag"
  },
  "author": "Netanel Basal <netanel7799s@gmail.com>",
  "bugs": {
    "url": "https://github.com/NetanelBasal/spectator/issues"
  },
  "homepage": "https://github.com/NetanelBasal/spectator#readme",
  "keywords": [
    "angular unit test",
    "angular simplified tests",
    "jasmine",
    "angular",
    "angular tests",
    "angular easy tests",
    "angular test services",
    "angular testing dumb components"
  ],
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "dom-testing-library": "2.1.0",
    "jquery": "^3.3.1"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.6",
    "copy": "^0.3.1",
    "standard-version": "^4.3.0",
    "typescript": "^2.8.1"
  },
  "peerDependencies": {
    "@angular/common": "^6.0.0",
    "@angular/core": "^6.0.0"
  }
}
