{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "stripInternal": false,
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "strictNullChecks": false,
    "importHelpers": true,
    "newLine": "lf",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../dist/packages/spectator",
    "rootDir": ".",
    "noEmitOnError": false,
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "spectator": ["../dist/packages/spectator"]
    },
    "typeRoots": [
      "../node_modules/@types/"
    ]
  },
  "files": [
    "public_api.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": false,
    "strictMetadataEmit": true,
    "flatModuleOutFile": "index.js",
    "flatModuleId": "spectator",
    "skipTemplateCodegen": true
  }
}
